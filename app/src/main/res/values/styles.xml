<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Fundo escuro para a tela -->
        <item name="android:windowBackground">#121212</item>
        <item name="android:colorAccent">#FF4081</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="GameButton">
        <!-- Estilo para os botÃµes do jogo -->
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GameStatusText">
        <!-- Estilo para as mensagens de status do jogo -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#9370DB</item>
        <item name="android:gravity">center</item>
    </style>
</resources>